{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      // INI ADALAH BAGIAN KRUSIAL UNTUK ALIAS @/
      "@/*": ["src/*"]
    },

    // Konfigurasi tambahan untuk interoperabilitas modul
    "module": "ESNext",
    "moduleResolution": "bundler"
  }
}
